<body class="">
    <div class="page-lock">
        <div class="page-logo">
            <img src="../content/logo.png" alt="logo" style="width:200px" class='retina-ready'/> 
        </div>
        <div class="page-body">
            <div class="lock-head"> Locked </div>
            <div class="lock-body">
                <div class="pull-left lock-avatar-block">
                    <img src='@(ViewBag.PicPath == null ? "http://www.placehold.it/200x150/EFEFEF/AAAAAA&amp;text=no+image" : ViewBag.PicPath.ToString())' class="lock-avatar">
                </div>
                @using (Html.BeginForm("Login", "Account", new { }, FormMethod.Post, new { @class = "lock-form pull-left" }))
                {
                    @Html.AntiForgeryToken()
                    <h4>@ViewBag.FullName</h4>
                    @Html.Hidden("returnUrl", (object)ViewBag.ReturnUrl.ToString())
                    @Html.Hidden("UserName", (object)ViewBag.UserName.ToString())
                    <div class="form-group">
                        @Html.PasswordFor(model => model.Password, new { @class = "form-control placeholder-no-fix", autocomplete = "off", placeholder = "Password" })
                        @Html.ValidationMessageFor(model => model.Password)
                    </div>
                    <div class="form-actions">
                        <button type="submit" class="btn red uppercase">Login</button>
                    </div>
                }
            </div>
            <div class="lock-bottom">
                @using (Html.BeginForm("LogOut", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { id = "logoutForm", @class = "hide" }))
                {@Html.AntiForgeryToken()}

                <a href="javascript:document.getElementById('logoutForm').submit()">Not @ViewBag.FullName?</a>
            </div>
        </div>
    </div>
    <div class="copyright" style="color:#b4bcc8;text-align:center"> @*<img src="/Content/Flat/img/logo.png" alt="">*@ 2017 © KMDW </div>
</body>
</html>
